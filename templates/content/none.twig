<div class="no-results not-found">
  <header class="page-header">
    <h1 class="page-title">{{ __( 'Nothing Found', 'storefront' )|e('esc_html') }}</h1>
  </header><!-- .page-header -->

  <div class="page-content">
    {% if function('is_home') && function('current_user_can', 'publish_posts')  %}
      <p>
        {{ __('Ready to publish your first post? <a href="%1$s">Get started here</a>.', 'storefront')|format(
          function('admin_url', 'post-new.php')|e('esc_url')
        )
        }}
      </p>
    {% elseif function('is_search') %}
      <p>{{ __( 'Sorry, but nothing matched your search terms. Please try again with some different keywords.', 'storefront' )|e('esc_html') }}</p>
      {% function('get_search_form') %}
    {% else %}
      <p>{{ __( 'It seems we can&rsquo;t find what you&rsquo;re looking for. Perhaps searching can help.', 'storefront' )|e('esc_html') }}</p>
      {% function('get_search_form') %}
    {% endif %}
  </div><!-- .page-content -->
</div><!-- .no-results -->
