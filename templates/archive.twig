{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}
  <div id="primary" class="content-area">
    <main id="main" class="site-main" role="main">

    {% if posts %}
      <header class="page-header">
        {{ fn('the_archive_title', '<h1 class="page-title">', '</h1>') }}
        {{ fn('the_archive_description', '<div class="taxonomy-description">', '</div>') }}
      </header><!-- .page-header -->

      {% include 'loop.twig' with { posts: posts } only %}
    {% else %}
      {% include 'content/none.twig' %}
    {% endif %}

    </main><!-- #main -->
  </div><!-- #primary -->
{% endblock %}
